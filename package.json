{
    "name": "tailwind-merge",
    "version": "1.0.0",
    "description": "Merge Tailwind CSS classes without style conflicts",
    "keywords": [
        "tailwindcss",
        "tailwind",
        "css",
        "classes",
        "className",
        "classList",
        "merge",
        "conflict"
    ],
    "homepage": "https://github.com/dcastil/tailwind-merge",
    "bugs": {
        "url": "https://github.com/dcastil/tailwind-merge/issues"
    },
    "license": "MIT",
    "author": "Dany Castillo",
    "files": [
        "dist",
        "src"
    ],
    "source": "src/index.ts",
    "exports": {
        "require": "./dist/index.js",
        "import": "./dist/index.mjs",
        "default": "./dist/index.mjs"
    },
    "module": "dist/index.mjs",
    "main": "dist/index.js",
    "types": "./dist/types/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/dcastil/tailwind-merge.git"
    },
    "sideEffects": false,
    "scripts": {
        "build": "dts build",
        "test": "dts test",
        "lint": "eslint --max-warnings 0 '**'",
        "preversion": "git checkout main && git pull",
        "version": "zx scripts/update-readme.js",
        "postversion": "git push --follow-tags && open https://github.com/dcastil/tailwind-merge/releases"
    },
    "dependencies": {
        "hashlru": "^2.3.0"
    },
    "devDependencies": {
        "@types/jest": "^27.0.3",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "dts-cli": "^0.20.0",
        "eslint": "^8.3.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-jest": "^25.3.0",
        "fp-ts": "^2.11.5",
        "jest": "^27.3.1",
        "prettier": "^2.3.2",
        "ts-jest": "^27.0.7",
        "typescript": "^4.5.2",
        "zx": "^4.0.0"
    }
}
